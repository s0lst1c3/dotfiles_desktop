#
# wallpaper thing
ROOT_WALLPAPER='off'
sudo() {


	TRAPEXIT() {

		results=$(for i in `pgrep zsh`; do ps -u root | grep $i; done)
		if [ -z $results ]; then
			ROOT_WALLPAPER='off'
			feh --bg-center /home/solstice/Pictures/wallpapers/odin.jpg
		fi
	}

		
	if [[ $@ == "-s" ]]; then
		if [[ $ROOT_WALLPAPER == 'off' ]]; then
			ROOT_WALLPER='on'
			feh --bg-center /home/solstice/Pictures/wallpapers/odin-red.png
		fi
	elif [[ $@ == "-i" ]]; then
		if [[ $ROOT_WALLPAPER == 'off' ]]; then
			feh --bg-center /home/solstice/Pictures/wallpapers/odin-red.png
		fi
	fi
	command sudo "$@"


}


